<?xml version="1.0"?>

<project name="SharpZipLib C# Examples" default="build" basedir=".">

	<target name="setup">
		<echo message="Setup"/>
		<copy todir="bin">
			<fileset basedir="../../bin">
						<include name="ICSharpCode.SharpZipLib.dll"/>
					</fileset>
			</copy>
	</target>

	<target name="build" depends="setup" >
		
		<!-- compile CreateZipFile example -->
		<echo message="Building CreateZipFile example"/>
		<copy todir="bin">
			<fileset basedir="../../bin/ICSharpCode.SharpZipLib">
				<include name="ICSharpCode.SharpZipLib.dll"/>
			</fileset>
			</copy>
			
		<csc 
			target="exe" 
			output="bin/createzipfile.exe" 
			debug="False">
			
			<sources basedir="CreateZipFile">
				<include name="**/*.cs"/>
			</sources>

			<references basedir="bin">
				<include name="ICSharpCode.SharpZipLib.dll"/>
			</references>
		</csc>

		<!-- compile minigzip example -->
		<echo message="Building minigzip example"/>
		<csc 
			target="exe" 
			output="bin/minigzip.exe" 
			debug="False">
			
