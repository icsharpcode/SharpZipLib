			</sources>
			<references basedir="bin">
				<include name="ICSharpCode.SharpZipLib.dll"/>
			</references>
		</csc>
	</target>
	
	<target name="clean">
			<delete verbose="true" >
			<fileset basedir="bin">
				<include name="*.exe"/>
				<include name="ICSharpCode.SharpZipLib.dll"/>
			</fileset>
		</delete>
	</target>

	<target name="rebuild" depends="clean, build" />

</project>
